.media
  = link_to product, class: 'pull-left' do
    = image_tag product.photo.thumb.url, width: 64, height: 64, class: 'media-object'
  .media-body
    %h4.media-heading= link_to product.name, product
    %p
      %strong= product.price
      = link_to 'Edit', [:edit, product]
      %br
      = product.description
