= form_for @customer, html: { class: 'form-horizontal' } do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :card_number, class: 'control-label'
    .controls
      = f.text_field :card_number
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  .control-group
    = f.label :email, class: 'control-label'
    .controls
      = f.text_field :email
  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', customers_path, class: 'btn'
